datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  birthDate DateTime
  Post      Post?    @relation(fields: [postId], references: [id])
  postId    String?
}

model Post {
  id     String @id @default(cuid())
  author User[]
}
